    "type":        "library",
    "license":     "MIT",



    "authors": [
        {
            "name":     "Sid Roberts",
            "email":    "sid@sidroberts.co.uk",
            "homepage": "https://sidroberts.co.uk",
            "role":     "Developer"
        }
    ],



    "support": {
        "source": "https://github.com/SidRoberts/twig-whitelisted-functions",
